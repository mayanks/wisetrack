<div class="widget widget-table action-table">
  <div class="widget-header">
      <i class="icon-briefcase"></i>
      <h3>Accounts</h3>
  </div>

  <div id="transactions" class="widget-content">
    <table class="table table-bordered table-stripped">
      <thead>
        <th>Name</th>
        <th>Account Number</th>
        <th>Branch</th>
        <th>Account Type</th>
        <th>Balance</th>
      </thead>
      <tbody>
        <%- balance = 0 %>
        <%- @accounts.each do |account| -%>
          <%- balance += account.closing_balance -%>
          <tr>
            <td><%= link_to(account.name,account) %></td>
            <td><%= account.number %></td>
            <td><%= account.branch %></td>
            <td><%= account.ac_type %></td>
            <td><%= rs account.closing_balance %></td>
          </tr>
        <%- end -%>
        <tr>
          <td>Total</td>
          <td></td>
          <td></td>
          <td></td>
          <td><%=rs(balance)%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
 
