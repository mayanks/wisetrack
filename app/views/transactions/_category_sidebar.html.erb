<div class="span3">
  <div class="widget widget-table">
    <div class="widget-header">
      <h3>Categories</h3>
    </div>

    <div class="widget-content">
 
      <ul class="nav nav-list">
        <li class="nav-header">Income</li>
        <%- Category.income_categories.each do |c| %>
          <li class="<%= 'active' if @category == c %>"><%= link_to(c.name,category_transactions_path(c)) %></li>
          <%- c.categories.each do |cc| %>
            <li class="<%= 'active' if @category == cc %>"><%= link_to(cc.name,category_transactions_path(cc),:class => "indent") %></li>
          <%- end -%>
        <%- end -%>
        <li class="nav-header">Expense</li>
        <%- Category.expense_categories.each do |c| %>
          <li class="<%= 'active' if @category == c %>"><%= link_to(c.name,category_transactions_path(c)) %></li>
          <%- c.categories.each do |cc| %>
            <li class="<%= 'active' if @category == cc %>"><%= link_to(cc.name,category_transactions_path(cc),:class => "indent") %></li>
          <%- end -%>
        <%- end -%>
      </ul>
    </div>
  </div>
</div>
